<!doctype html>
<html lang="pt-BR">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <title>Cadastro de Obras</title>
        <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="/icons/iconfont/material-icons.css" rel="stylesheet">

    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="\">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                <a class="nav-item nav-link" href="\engenheiro">Engenheiros<span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="\usuario">Usu√°rios</a>
                <a class="nav-item nav-link" href="\obra">Obras</a>
                <a class="nav-item nav-link" href="\sair">Sair</a>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="py-5 text-center">
                <h2>Obras Cadastradas</h2>
                <p class="lead">Lista de Obras cadastrados no sistema</p>
            </div>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col" hidden="hidden">ID</th>
                    <th scope="col">Cidade</th>
                    <th scope="col">Tipo Obra</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Engenheiro</th>
                    <th scope="col">Data Inicio</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Excluir</th>
                  </tr>
                </thead>
                <tbody>
                    <% if(obras) {%>
                        <% for(let i = 0; i < obras.length; i++ ) { %>
                            <tr>
                                <th hidden="hidden"><%=obras[i].id %></th>
                                <td><%= obras[i].obr_cidade %></td>
                                <td><%= obras[i].obr_tipoobra %></td>
                                <td><%= obras[i].obr_valor %></td>
                                <td><%= obras[i].eng_nome %></td>
                                <td><%= obras[i].obr_dtinicio %></td>
                                <td><a href="/detalheobra?id=<%= obras[i].id %>" class="btn btn-outline-info">
                                    <i class="material-icons">info</i>
                                </a></td>
                                <td><a href="/alterarobra?id=<%= obras[i].id %>" class="btn btn-outline-primary">
                                    <i class="material-icons">edit</i>
                                </a></td>
                                <td><a href="/excluirobra?id=<%= obras[i].id %>" class="btn btn-outline-danger">
                                    <i class="material-icons">delete</i>
                                </a></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
              </table>
              <div class="row">
                <div class="col-md-11 d-flex justify-content-end">
                    <a class="btn btn-primary" href="\novoobra">Cadastro</a>
                </div>
            </div>
        </div>
    
        <!-- Bootstrap core JavaScript -->
        <script src="/popper/dist/umd/popper.min.js"></script>
        <script src="/jquery/dist/jquery.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>

    </body>
</html>